<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="8dp">

    <LinearLayout
        android:id="@+id/header_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user_post"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:background="@drawable/ic_baseline_person_24"
             />

        <TextView
            android:id="@+id/name_user_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            tools:text="Gian"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            style="@style/TextAppearance.Material3.ActionBar.Subtitle"/>
        <TextView
            android:id="@+id/time_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hace 2 horas"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/image_post"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        tools:background="@drawable/ic_launcher_background"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        >
        <ImageView
            android:id="@+id/is_like_post"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_favorite_border_24"
            />
        <TextView
            android:id="@+id/number_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5 likes"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        >
        <TextView
            android:id="@+id/description_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Description"
            android:maxLines="4"
            android:ellipsize="end"
            style="@style/TextAppearance.Material3.BodyMedium"/>

    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        style="@style/Widget.MaterialComponents.MaterialDivider"/>



</LinearLayout>